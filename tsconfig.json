{
    "compilerOptions":
    {
        "target": "es5",
        "module": "commonjs",
        "outDir": "build",
        "declaration": false,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "exclude": [
        "node_modules",
        "bower_components",
        "typings",
        "dist"
    ]
}